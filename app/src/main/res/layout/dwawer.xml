<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical"
    tools:ignore="Overdraw">

    <LinearLayout
        android:id="@+id/lin_mains"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/txtby"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="15sp"
            android:paddingTop="15sp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_3"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10sp"
            android:text="@string/title_activity_main2"
            android:textColor="@color/colorPrimary"
            android:textSize="26sp" />

        <TextView
            style="@style/TextviewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:paddingBottom="15dp"
            android:text="By - Vimalsagarsooriji"
            android:textColor="@color/red"
            android:textSize="16dp"

            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    style="@style/ViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    tools:ignore="SmallSp" />

                <LinearLayout
                    android:id="@+id/lin_alert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10sp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_latestposts"
                        tools:ignore="ContentDescription" />

                    <TextView
                        style="@style/TextviewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/alert"

                        />
                </LinearLayout>

                <View
                    style="@style/ViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    tools:ignore="SmallSp" />

                <LinearLayout
                    android:id="@+id/lin_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10sp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_info"
                        tools:ignore="ContentDescription" />

                    <TextView
                        style="@style/TextviewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/about"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_aboutinfo"
                    style="@style/TextviewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:padding="8dp"
                    android:text="-App Info" />

                <TextView
                    android:id="@+id/txt_aboutguruji"
                    style="@style/TextviewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:padding="8dp"
                    android:text="-Guruji" />

                <View
                    style="@style/ViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    tools:ignore="SmallSp" />

                <LinearLayout
                    android:id="@+id/lin_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10sp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_event"
                        tools:ignore="ContentDescription" />

                    <TextView
                        style="@style/TextviewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/event" />
                </LinearLayout>

                <View
                    style="@style/ViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    tools:ignore="SmallSp" />

                <LinearLayout
                    android:id="@+id/lin_thought"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10sp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_edit"
                        tools:ignore="ContentDescription" />

                    <TextView
                        style="@style/TextviewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/thought"

                        />
                </LinearLayout>

                <View
                    style="@style/ViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    tools:ignore="SmallSp" />

                <LinearLayout
                    android:id="@+id/lin_audio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10sp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_music"
                        tools:ignore="ContentDescription" />

                    <TextView
                        style="@style/TextviewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/audio"

                        />
                </LinearLayout>

                <View
                    style="@style/ViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    tools:ignore="SmallSp" />

                <LinearLayout
                    android:id="@+id/lin_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10sp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_video"
                        tools:ignore="ContentDescription" />

                    <TextView
                        style="@style/TextviewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/video"

                        />
                </LinearLayout>

                <View
                    style="@style/ViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    tools:ignore="SmallSp" />

                <LinearLayout
                    android:id="@+id/lin_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10sp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_info"
                        tools:ignore="ContentDescription" />

                    <TextView
                        style="@style/TextviewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/information"

                        />
                </LinearLayout>


                <View
                    style="@style/ViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    tools:ignore="SmallSp" />

                <LinearLayout
                    android:id="@+id/lin_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10sp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_picture"
                        tools:ignore="ContentDescription" />

                    <TextView
                        style="@style/TextviewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/gallaery"

                        />
                </LinearLayout>

                <View
                    style="@style/ViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    tools:ignore="SmallSp" />

                <LinearLayout
                    android:id="@+id/lin_qa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10sp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_help"
                        tools:ignore="ContentDescription" />

                    <TextView
                        style="@style/TextviewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/question"

                        />
                </LinearLayout>

                <View
                    style="@style/ViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    tools:ignore="SmallSp" />

                <LinearLayout
                    android:id="@+id/lin_comp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10sp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_paste"
                        tools:ignore="ContentDescription" />

                    <TextView
                        style="@style/TextviewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/competition"

                        />
                </LinearLayout>

                <View
                    style="@style/ViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    tools:ignore="SmallSp" />

                <LinearLayout
                    android:id="@+id/lin_op"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10sp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_opinion"
                        tools:ignore="ContentDescription" />

                    <TextView
                        style="@style/TextviewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/Opinionpoll"

                        />
                </LinearLayout>

                <View
                    style="@style/ViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    tools:ignore="SmallSp" />

                <LinearLayout
                    android:id="@+id/lin_bypeople"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10sp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_users"
                        tools:ignore="ContentDescription" />

                    <TextView
                        style="@style/TextviewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/bypeople"

                        />
                </LinearLayout>

                <View
                    style="@style/ViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    tools:ignore="SmallSp" />

                <LinearLayout
                    android:id="@+id/lin_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10sp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_setting"
                        tools:ignore="ContentDescription" />

                    <TextView
                        style="@style/TextviewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/setting"

                        />
                </LinearLayout>

                <View
                    style="@style/ViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Social links:" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10sp">

                    <ImageView
                        android:id="@+id/img_youtube"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_youtube"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/img_facebook"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_facebook"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/img_gplus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_gplus"
                        tools:ignore="ContentDescription" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</LinearLayout>
