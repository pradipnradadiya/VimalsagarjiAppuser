<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTabBackground"
    android:orientation="vertical"
    tools:ignore="Overdraw">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/activity_main_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_above="@+id/btn_askQuestion"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/listview_today"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <TextView
        android:id="@+id/txt_nodata_today"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="No Data"
        android:textColor="@color/colorTabColor"
        android:textSize="40sp"
        android:textStyle="italic"
        android:visibility="gone"
        tools:ignore="HardcodedText" />


    <Button
        android:id="@+id/btn_askQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:text="Ask Question"
        android:textColor="@color/white"
        android:textAllCaps="false"
        tools:ignore="HardcodedText" />

</RelativeLayout>