<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2sp"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:layout_marginTop="2sp"
    android:background="@drawable/round_rect_shape"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        >


        <LinearLayout
            android:id="@+id/lin_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/txt_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="1)"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <TextView
                            android:id="@+id/txt_title"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="8"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="Guru Purnima"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            tools:ignore="HardcodedText" />

                        <ImageView
                            android:id="@+id/img_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="1"
                            android:paddingLeft="10sp"
                            android:text="Quetion Type : "
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                        <TextView
                            android:id="@+id/txt_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="Normal"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="1"
                            android:paddingLeft="10sp"
                            android:text="Answer : "
                            android:textColor="@color/black"

                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                        <TextView
                            android:id="@+id/txt_answer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:text="Normal"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="1"
                            android:paddingLeft="10sp"
                            android:text="Options : "
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                        <TextView
                            android:id="@+id/txt_option"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:text=""
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtQuestion"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

        </RadioGroup>

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp"
            tools:ignore="RtlHardcoded">

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="30dp">

                <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextView
                    android:id="@+id/txt_yes"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/textview_yes"
                    android:gravity="center"
                    android:text="Yes"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/img_yes"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_done" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="30dp">

                <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextView
                    android:id="@+id/txt_no"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/textview_no"
                    android:gravity="center"
                    android:text="No"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/img_no"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_done" />

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>