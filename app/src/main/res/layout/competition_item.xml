<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_rect_shape"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    tools:ignore="Overdraw">

    <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextViewBold
        android:id="@+id/txtQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minLines="1"
        android:padding="5dp"
        android:text="Question"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:textSize="16dp"
        tools:ignore="HardcodedText" />

    <com.vimalsagarji.vimalsagarjiapp.utils.CustomEditText
        android:textSize="16dp"
        android:id="@+id/edit_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtQuestion"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@+id/btnReply"
        android:background="@drawable/competiti_edittext_shape"
        android:hint="Reply your answer"
        android:padding="5dp"
        android:textColor="@color/cardview_dark_background"
        android:inputType="textMultiLine"
        android:textColorHint="@color/cardview_dark_background"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <Button
        android:id="@+id/btnReply"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtQuestion"

        android:layout_margin="10dp"
        android:background="@drawable/competiti_edittext_shape"
        android:text="Reply"
        android:textColor="@color/text_new_post"
        android:textAllCaps="false"
        android:textSize="14sp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtQuestion"
        android:layout_margin="10dp"
        android:orientation="horizontal">

    </RadioGroup>

</RelativeLayout>