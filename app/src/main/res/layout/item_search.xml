<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_rect"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    >

    <!-- put whatever you want -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            >

            <ImageView
                android:id="@+id/search_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:src="@drawable/infromation"

                android:contentDescription="TODO" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:orientation="vertical">

                <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextViewBold
                    style="@style/itemtextview"
                    android:id="@+id/txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:padding="5dp"
                    android:text="Title"
                    android:lineSpacingExtra="7dp"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:textStyle="bold" />

                <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextView
                    style="@style/itemtextview"
                    android:id="@+id/txt_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="7dp"
                    android:text="22/10/2016" />

            </LinearLayout>
        </LinearLayout>

        <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextView
            style="@style/itemtextview"
            android:id="@+id/txt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:text="No Description available."
            android:lineSpacingExtra="7dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            />

    </LinearLayout>

</LinearLayout>