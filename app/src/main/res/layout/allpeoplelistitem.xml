<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_rect_shape"
    android:orientation="horizontal"
    android:padding="10dp"
    tools:ignore="Overdraw">

    <ImageView
        android:id="@+id/imgAudio"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_weight="3"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_gallery"
        tools:ignore="ContentDescription" />


    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical">


        <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextViewBold
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgAudio"
            android:ellipsize="end"
            android:layout_marginBottom="5dp"
            android:lines="1"
            android:maxLines="1"
            android:text="Title"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextView
            android:id="@+id/txtPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitle"
            android:layout_toRightOf="@+id/imgAudio"
            android:ellipsize="end"
            android:layout_marginBottom="5dp"
            android:lines="2"
            android:text="Post"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="HardcodedText,RtlHardcoded" />


        <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextView
            android:id="@+id/txt_postby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txtDate"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/imgAudio"
            android:gravity="right"
            android:lines="1"
            android:text="Post By:Pradip Radadiya"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txt_postby"
                android:orientation="horizontal"

                >

                <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextView
                    android:id="@+id/txt_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5sp"
                    android:gravity="right"
                    android:lines="1"
                    android:text="0"
                    android:textColor="@color/views"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5sp"
                    android:gravity="right"
                    android:lines="1"
                    android:text="Views"
                    android:textColor="@color/views"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />
            </LinearLayout>

            <com.vimalsagarji.vimalsagarjiapp.utils.CustomTextView
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPost"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/imgAudio"
                android:gravity="right"
                android:lines="1"
                android:text="Date"
                android:textColor="@android:color/black"
                android:textSize="14sp"

                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>