<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTabBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:text="Question"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="1"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/txtAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtQuestion"
        android:layout_marginLeft="10dp"
        android:text="Answer"
        android:textColor="#4d4d4d"
        android:maxLines="3"
        android:textSize="14sp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/txt_datess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txtAnswer"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:lines="1"
        android:text="15/10/2016"
        android:textColor="#4d4d4d"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <!--<Button
        android:id="@+id/btnReadMore"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:background="@color/colorTabBackground"
        android:layout_alignRight="@+id/txtAnswer"
        android:layout_below="@+id/txtQuestion"
        android:textColor="#4d4d4d"
        android:text="Read More"
        android:layout_height="wrap_content"/>-->

    <TextView
        android:id="@+id/txt_postby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_datess"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:text="Question By: Pradip Radadiya"
        android:textColor="@color/colorPrimary"
        android:lines="1"
        android:textSize="12sp"
        tools:ignore="HardcodedText,RtlHardcoded" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/txt_postby"
        android:paddingLeft="10sp"
        android:layout_alignParentRight="true"

        >
        <TextView
            android:id="@+id/txt_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:gravity="right"
            android:text="10120"
            android:textSize="12sp"
            tools:ignore="HardcodedText,RtlHardcoded"
            android:textColor="@color/views"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:gravity="right"
            android:text="Views"
            android:textSize="12sp"
            tools:ignore="HardcodedText,RtlHardcoded"
            android:textColor="@color/views"
            />
    </LinearLayout>

</RelativeLayout>